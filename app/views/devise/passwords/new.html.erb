<head>
  <link href='https://fonts.googleapis.com/css?family=Righteous' rel='stylesheet' type='text/css'>
</head>

<div id="gl-wrapper">

  <!-- Main Container -->
  <div id="gl-main-container">

    <!-- Header -->
    <div id="gl-header">
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header" id="gl-header-small">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gl-header-menu-buttons" aria-expanded="false">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <!-- Collect the nav links and other content for toggling -->
        <div class="collapse navbar-collapse" id="gl-header-menu-buttons" aria-expanded="false">
          <div class="gl-header-inner-nav">
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a href="/about.html">ABOUT US</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <!-- End Header -->

    <div id="main-container">
      <div id="main-form-container">
        <div class="form-container">
          <div class="form-title">
            <h3>FORGOT PASSWORD</h3>
          </div>

          <hr/>

          <!-- Start of Form Content-->
          <div class="form-content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email, :class => "form-label" %><br />
                  <%= f.email_field :email, autofocus: true, :class => "form-control"%>
                </div>

                <div class="form-group">
                  <div id="btn-reset-password">
                    <%= f.submit "SEND RESET PASSWORD INSTRUCTIONS", :class => "btn btn-gl-custom" %>
                  </div>
                </div>

                <div class="form-group">
                  <div>
                    <a href="/users/sign_in" class="btn btn-gl-custom btn-gl-cancel">BACK</a>

                    <div style="float: right">
                      <a href="/users/sign_in" class="btn btn-gl-cancel">LOGIN</a>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="custom-hr">
                  <span>
                    <img src="/assets/anim_bomb_icon.gif"/>
                  </span>
                  </div>
                </div>

                <div class="form-group">
                  <div class="facebook-login">
                    <a class="btn btn-primary" href="/users/auth/facebook">
                      <img src="/assets/img_facebook_logo.png"/>
                      LOGIN WITH FACEBOOK
                    </a>
                  </div>
                </div>
            <% end %>
          </div>
          <!-- End of Form Content -->
        </div>
      </div>
    </div>
  </div>
</div>

